<header class='top-page-header'>
  <div class='user-name'>
    <%# ユーザーログイン時はニックネームとログアウトボタンを表示 %>
    <% if user_signed_in? %>
      <span><%= link_to "#{current_user.nickname}さん", "#", class: "user-nickname" %></span>
      <button type="button" class="btn btn-secondary btn-sm" data-toggle="modal" data-target="#logoutModalCenter">
        ログアウト
      </button>
      <!-- Modal -->
      <div class="modal fade" id="logoutModalCenter" tabindex="-1" role="dialog" aria-labelledby="logoutModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="logoutModalCenterTitle">ログアウトの確認</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <p style="text-align:left;">ログアウトしますか？</p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">キャンセル</button>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
      <!-- //Modal -->
    <%# 未ログイン時は以下を表示 %>
    <% else %>
      <span>ゲストさん</span>
      <button type="button" class="btn btn-secondary btn-sm">
        <%= link_to 'ログイン', new_user_session_path, class: "login" %>
      </button>
    <% end %>
  </div>

  <div class='header-container'>
    <%# ロゴ（ヘッダー左） %>
    <div class='header-logo'>
      <%= link_to image_tag("company-logo.png", class:"company-logo"), "/" %>
    </div>
    <%# グローバルナビゲーション（ヘッダー中央） %>
    <div class='header-nav'>
      <ul class='lists-left'>
        <li><%= link_to '商品一覧', items_path, class: "item-list" %></li>
        <li><%= link_to '新入荷・おすすめ', "#", class: "new-item-list" %></li>
        <li><%= link_to 'お試しセット', "#", class: "trial-list" %></li>
        <li><%= link_to '生産者・蔵元', "#", class: "kuramoto-list" %></li>
        <li><%= link_to '会員登録', new_user_registration_path, class: "sign-up" %></li>
      </ul>
    </div>
    <%# アイコン（ヘッダー右） %>
    <div class='header-btn'>
      <ul class='btn-list'>
        <li>
          <%= link_to '#' do %>
            <span><i class="fas fa-search fa-2x fa-fw"></i></span>
          <% end %>
        </li>
        <li>
          <%= link_to new_user_session_path do %>
            <span><i class="fas fa-user fa-2x fa-fw"></i></span>
          <% end %>
        </li>
        <li>
          <%= link_to '#' do %>
            <span><i class="fas fa-shopping-cart fa-2x fa-fw"></i></span>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</header>