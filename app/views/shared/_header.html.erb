<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("company-logo.png", class:"company-icon"), "/" %>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードから探す'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
  </div>
  <div class='nav'>
    <ul class='lists-left'>
      <li><%= link_to '商品一覧', "#", class: "item-list" %></li>
      <li><%= link_to '酒米から探す', "#", class: "rice-list" %></li>
      <li><%= link_to '味で探す', "#", class: "taste-list" %></li>
      <li><%= link_to '新入荷', "#", class: "new-item-list" %></li>
      <li><%= link_to 'おすすめ', "#", class: "recommend-list" %></li>
      <li><%= link_to 'お試しセット', "#", class: "trial-list" %></li>
      <li><%= link_to '生産者・蔵元', "#", class: "kuramoto-list" %></li>
    </ul>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to 'テストさん', "#", class: "user-nickname" %></li>
        <li><%= link_to 'ログアウト',  '#', method: :delete, class: "logout" %></li>
      <% else %>
        <li><%= link_to 'ログイン',  '#', class: "login" %></li>
        <li><%= link_to '新規登録', '#', class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>